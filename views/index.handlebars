<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>Welcome Competitors!</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="example-text">First Name</label>
            <input type="text" id="first-name" class="form-control" aria-describedby="example-text" placeholder="Enter Example Text">
          </div>
           <div class="form-group">
            <label for="example-text">Last Name</label>
            <input type="text" id="last-name" class="form-control" aria-describedby="example-text" placeholder="Enter Example Text">
          </div>
           <div class="form-group">
            <label for="example-text">Belt Color</label>
            <input type="text" id="belt-color" class="form-control" aria-describedby="example-text" placeholder="Enter Example Text">
          </div>
           <div class="form-group">
            <label for="example-text">Weight</label>
            <input type="text" id="weight" class="form-control" aria-describedby="example-text" placeholder="Enter Example Text">
          </div>
           <div class="form-group">
            <label for="example-text">Zipcode</label>
            <input type="text" id="zipcode" class="form-control" aria-describedby="example-text" placeholder="Enter Example Text">
          </div>
          <div class="form-group">
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Competitors:</h3>
        <ul id="competitor-list" class="list-group">
          {{#each Competitors}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="competitors/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
